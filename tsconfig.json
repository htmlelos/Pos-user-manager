{
    "compilerOptions": {
        "target": "ES2022",
        "module": "CommonJS",
        "rootDir": "./src",
        "sourceMap": true,
        "outDir": "dist",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
    },
    "include": [
        "src/**/*.ts",
        "test/**/*"
    ],
    "exclude": ["node_modules", "**/*.specs.ts"]
}